#include <iostream>

int main() {
    int number;

    // Input from user
    std::cout << "Enter an integer: ";
    std::cin >> number;

    // Check if number is even or odd
    if (number % 2 == 0) {
        std::cout << number << " is even." << std::endl;
    } else {
        std::cout << number << " is odd." << std::endl;
    }

    return 0;
}
